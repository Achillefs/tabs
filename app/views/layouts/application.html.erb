<!DOCTYPE html>
<html>
<head>
  <title>Tabbo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class %>">

<% flash.each do |name, msg| %>
  <div class="flash-message <%= name %>">
    <a href="#" class="close">close</a>
    <p><%= msg %></p>
  </div>
<% end %>

<%= yield %>

</body>
</html>
